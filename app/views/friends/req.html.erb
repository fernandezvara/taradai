<% content_for :content do %>
<div class="w470">
	<%= simple_form_for(@pending, :remote => true) do |f| %>
	<div class="w460 radius4 green0f green4b f130 lh130 p5 mr0">¿Quieres añadir a <%= @profile.name %> a tu lista de amigos?</div>
	<div class="w460 fcolor8 f110 lh110 mt10"><p><%= @profile.first_name %> debe confirmar tu solicitud antes de aparecer como amigo tuyo.<br/>Déjale un mensaje personal si lo deseas.</p></div>
	
	<div class="w460 fcolor9 f110 lh110 mt10">
		<div class="w70 mr10 tright left"><strong>Mensaje</strong></div>
	
		<div class="w370 right">
			<%= f.text_area :message, :style => "width:370px; height:90px" %>
		</div>
	</div>
		<%= f.hidden_field :requester %>
		<%= f.hidden_field :requested %>
	<div class="clear"></div>
	<div class="mt10 w470">
		<div class="right">
	<input type="button" value="Cancelar" class="close" />
	<%= f.submit :class => 'ml10' %>
		</div>
	</div>
	<% end %>
	<div class="clear"></div>
</div>
<% end %>