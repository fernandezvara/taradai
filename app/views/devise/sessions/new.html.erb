<% content_for :left do %>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<fieldset>
		<legend><%= t('user.titles.signin') %></legend>
		<p><%= f.label(:email, t('user.labels.email')) %><br />
		<%= f.text_field :email, :class=> "t" %></p>
		<p><%= f.label(:password, t('user.labels.password')) %><br />
		<%= f.password_field :password, :class => "t" %></p>
		<p><span style="float:left"><%= f.check_box :remember_me %>
			 <%= f.label(:remember_me, t('user.labels.remember_me')) %></span>
		<span style="float:right">
			<%= f.submit t('user.buttons.signin'), :class => 'input' %>
		</span></p>
	</fieldset>
<% end %>
<%= render :partial => 'devise/shared/links' %>
<% end %>

<% content_for :right do %>
<h3><%= t('user.titles.still_not') %></h3>
<br />
<p><%= t('user.labels.still_not1' )%></p>
<p><%= t('user.labels.still_not2' )%><%= link_to t('user.buttons.tour'), "#" %>
<%= t('user.labels.still_not3')%></p>
<%= link_to t('user.buttons.signup'), new_registration_path(resource_name),  :class=> "button" %>
<% end %>