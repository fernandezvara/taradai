<%- if controller_name != 'sessions' %>
  <p>
	<%= t('user.labels.signin1') %>
	<%= link_to  t('user.buttons.signin1'), new_session_path(resource_name) %>
</p>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p>
	<%= t('user.labels.signup1') %>
	<%= link_to t('user.buttons.signup1'), new_registration_path(resource_name) %>
</p>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <p>
	<%= t('user.labels.forgot1') %>
	<%= link_to  t('user.buttons.forgot_password'), new_password_path(resource_name) %>
	<%= t('user.labels.forgot2') %>
</p>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p>
	<%= t('user.labels.confirmation_instructions1') %>
	<%= link_to  t('user.buttons.confirmation_instructions1'), new_confirmation_path(resource_name) %>
</p>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
<p>
	<%= t('user.labels.unlock_instructions') %>
	<%= link_to  t('user.buttons.unlock_instructions'), new_unlock_path(resource_name) %>
</p>  
<% end -%>
