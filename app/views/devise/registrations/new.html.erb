<% content_for :left do %>
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  	<fieldset>
			<legend><%= t('user.titles.signup')%></legend>
			<%= devise_error_messages! %>
			<p><%= f.label(:email, t('user.labels.email')) %><br />
			  <%= f.text_field :email, :class => "t" %></p>

			  <p><%= f.label(:password, t('user.labels.password')) %><br />
			  <%= f.password_field :password, :class => "t" %></p>

			  <p><%= f.label(:password_confirmation, t('user.labels.password_confirmation')) %><br />
			  <%= f.password_field :password_confirmation, :class => "t" %></p>

			  <p><%= f.submit t('user.buttons.signup'), :class => "but_submit" %></p>
		</fieldset>
	<% end %>
<%= render :partial => 'devise/shared/links' %>
<% end %>

<% content_for :right do %>
	<h3><%= t('user.titles.help_signup') %></h3>
	<br />
	<p><%= t('user.labels.help_signup1') %></p>
	<p><%= t('user.labels.help_signup2') %></p>
	<p><%= t('user.labels.help_signup3') %></p>
<% end %>
